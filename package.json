{
  "name": "lexicanterbeta",
  "productName": "Lexicanter-Beta",
  "version": "2.2.0",
  "description": "A lexicon management tool for constructed languages.",
  "main": "src/index.js",
  "scripts": {
    "compile-rust": "cargo build --manifest-path=src/app/utils/interop/library/Cargo.toml --release",
    "precompile": "npm run compile-rust && sass -q src/sass/:src/styles && rollup -c",
    "start": "npm run precompile && electron .",
    "build-mac": "npm run precompile && electron-builder --mac --publish never",
    "build-win": "npm run precompile && electron-builder --win --x64 --ia32 --publish never",
    "build-linux": "npm run precompile && electron-builder --linux --publish never",
    "publish": "npm run precompile && bash bash/publish.bash",
    "publish-only": "bash bash/publish.bash",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "repository": "https://github.com/Saturnine-Softworks/Lexicanter-Beta",
  "build": {
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "vPrefixedTagName": false
    },
    "appId": "com.lexicanterbeta.app",
    "productName": "Lexicanter",
    "win": {
      "target": "nsis",
      "icon": "src/res/alembic-beta.ico"
    },
    "mac": {
      "icon": "src/res/alembic-beta.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/res/alembic-beta.png",
      "category": "Office"
    },
    "nsis": {
      "installerIcon": "src/res/alembic-beta.ico",
      "installerHeaderIcon": "src/res/alembic-beta.ico"
    },
    "files": [
      "./src/**/*",
      "./LICENSE",
      "./README.md"
    ],
    "extraResources": [
      {
        "from": "./src/app/utils/interop/library/target/release/liblibrary.dylib",
        "to": "liblibrary.dylib",
        "filter": [
            "**/*"
          ] 
      }, {
        "from": "./src/app/utils/interop/library/src/graphemy",
        "to": "graphemy",
        "filter": [
            "**/*"
          ]
      }
    ],
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [],
  "author": {
    "name": "Ethan Ray"
  },
  "license": "GNU General Public License Version 3",
  "engine": {
    "node": ">=21.1.0"
  },
  "dependencies": {
    "@editorjs/code": "^2.8.0",
    "@editorjs/editorjs": "^2.26.5",
    "@editorjs/header": "^2.7.0",
    "@editorjs/paragraph": "^2.9.0",
    "@editorjs/table": "^2.2.0",
    "@editorjs/underline": "^1.1.0",
    "@electron/remote": "^2.0.9",
    "@types/marked": "^4.0.8",
    "@xata.io/client": "^0.26.9",
    "csv-parser": "^3.0.0",
    "electron-build": "^0.0.3",
    "electron-updater": "^5.3.0",
    "koffi": "^2.8.11",
    "marked": "^4.3.0",
    "node-fetch": "^3.3.2",
    "sass": "^1.60.0",
    "semver": "^7.6.0",
    "vex-js": "^4.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@svelte-plugins/tooltips": "^0.1.6",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.13.0",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "electron": "=22.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.35.0",
    "rollup": "~2.79.1",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "rollup-plugin-svelte": "^7.1.2",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
