{
    "name": "lexicanterbeta",
    "productName": "Lexicanter-Beta",
    "version": "2.2.1",
    "description": "A lexicon management tool for constructed languages.",
    "main": "src/index.js",
    "scripts": {
        "compile-rust": "cargo build --manifest-path=src/app/utils/interop/library/Cargo.toml --release",
        "precompile": "npm run compile-rust && sass -q src/sass/:src/styles && vite build",
        "dev": "NODE_ENV=development concurrently \"npm run web:watch\" \"sleep 1 && npm run electron:start\"",
        "start": "npm run precompile && npm run electron:start",
        "web:watch": "vite --port 3000",
        "electron:start": "electron .",
        "build-mac": "npm run precompile && electron-builder --mac --publish never",
        "build-win": "npm run precompile && electron-builder --win --x64 --ia32 --publish never",
        "build-linux": "npm run precompile && electron-builder --linux --publish never",
        "publish": "npm run precompile && bash bash/publish.bash",
        "publish-only": "bash bash/publish.bash",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "format": "prettier --write ."
    },
    "repository": "https://github.com/Saturnine-Softworks/Lexicanter-Beta",
    "build": {
        "publish": {
            "provider": "github",
            "releaseType": "release",
            "vPrefixedTagName": false
        },
        "appId": "com.lexicanterbeta.app",
        "productName": "Lexicanter-Beta",
        "win": {
            "target": "nsis",
            "icon": "src/res/alembic-beta.ico"
        },
        "mac": {
            "icon": "src/res/alembic-beta.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "src/res/alembic-beta.png",
            "category": "Office"
        },
        "nsis": {
            "installerIcon": "src/res/alembic-beta.ico",
            "installerHeaderIcon": "src/res/alembic-beta.ico"
        },
        "files": [
            "./src/**/*",
            "./LICENSE",
            "./README.md"
        ],
        "extraResources": [
            {
                "from": "./src/app/utils/interop/library/target/release/liblibrary.dylib",
                "to": "liblibrary.dylib",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "./src/app/utils/interop/library/src/graphemy",
                "to": "graphemy",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "output": "dist"
        }
    },
    "keywords": [],
    "author": {
        "name": "Ethan Ray"
    },
    "license": "GNU General Public License Version 3",
    "engine": {
        "node": ">=22.6.0"
    },
    "dependencies": {
        "@editorjs/code": "2.9.0",
        "@editorjs/editorjs": "2.30.5",
        "@editorjs/header": "2.8.7",
        "@editorjs/paragraph": "2.11.6",
        "@editorjs/table": "2.4.1",
        "@editorjs/underline": "1.1.0",
        "@electron/remote": "2.1.2",
        "@types/marked": "5.0.2",
        "@types/node": "22.5.0",
        "@types/wicg-file-system-access": "2023.10.5",
        "@xata.io/client": "0.30.0",
        "csv-parser": "3.0.0",
        "electron-build": "0.0.3",
        "electron-updater": "6.3.4",
        "koffi": "2.9.0",
        "marked": "14.1.0",
        "moo": "0.5.2",
        "nearley": "2.20.1",
        "node-fetch": "3.3.2",
        "sass": "1.77.8",
        "semver": "7.6.3",
        "vex-js": "4.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@svelte-plugins/tooltips": "3.0.1",
        "@sveltejs/vite-plugin-svelte": "3.1.2",
        "@tsconfig/svelte": "5.0.4",
        "@types/moo": "0.5.9",
        "@types/nearley": "2.11.5",
        "@typescript-eslint/eslint-plugin": "8.3.0",
        "@typescript-eslint/parser": "8.3.0",
        "@vitest/coverage-v8": "^2.0.5",
        "electron": "32.0.1",
        "electron-builder": "25.0.5",
        "eslint": "^9.9.1",
        "globals": "^15.9.0",
        "svelte": "4.2.19",
        "svelte-check": "3.8.6",
        "svelte-preprocess": "6.0.2",
        "tslab": "^1.0.22",
        "tslib": "2.7.0",
        "typescript": "5.5.4",
        "typescript-eslint": "^8.3.0",
        "vite": "5.4.2",
        "vite-plugin-electron-renderer": "0.14.5",
        "vitest": "2.0.5"
    }
}
